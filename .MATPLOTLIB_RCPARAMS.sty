# FIGURE
figure.figsize: 15, 9
figure.titlesize: 45

# AXES
axes.grid: True
axes.titlesize: 45
axes.labelsize: 40

# FONTS
font.family: Times New Roman
font.sans-serif: ['Bitstream Vera Sans']
text.usetex: True
mathtext.fontset: stixsans

# TICKS
xtick.direction: out
ytick.direction: out
xtick.labelsize: 30
ytick.labelsize: 30
xtick.major.size: 10.0
ytick.major.size: 10.0
xtick.minor.size: 3.0
ytick.minor.size: 3.0

# LINES
lines.linewidth: 3
lines.markersize: 7

# LEGEND
legend.fontsize: 35
legend.frameon: True
legend.framealpha: 0.5

# COLORMAPS
image.cmap: viridis

# SAVINGS
savefig.dpi: 150
